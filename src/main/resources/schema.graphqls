type Query {
  bookById(id: ID): Book
  authors: [Author]
  books: [Book]
  movies: [Movie]
}

type Mutation {
  updateAuthor(id: ID, firstName: String, lastName: String): Author
}

type Book {
  id: ID
  name: String
  pageCount: Int
  author: Author
}

type Movie {
  id: String
  title: String
  year: Int
  poster: String
  plot: String
}

type Author {
  id: ID
  firstName: String
  lastName: String
}